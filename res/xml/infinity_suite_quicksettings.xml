<PreferenceScreen
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:title="@string/quicksettings_title"
     xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

     <PreferenceCategory
          android:title="@string/general_category">
          
          <ListPreference
               android:key="qs_quick_pulldown"
               android:title="@string/qs_quick_pulldown"
               android:entries="@array/quick_pulldown_entries"
               android:entryValues="@array/quick_pulldown_values"
               android:defaultValue="0" />

          <com.infinity.support.preferences.SystemSettingSwitchPreference
               android:key="qs_footer_data_usage"
               android:title="@string/qs_show_data_usage_title"
               android:summary="@string/qs_show_data_usage_summary"
               android:defaultValue="true" />
               
          <com.infinity.support.preferences.SystemSettingSwitchPreference
               android:key="qs_data_usage_panel"
               android:title="@string/qs_data_usage_panel_title"
               android:summary="@string/qs_data_usage_panel_summary"
               android:defaultValue="false" />          
               
          <com.infinity.support.preferences.SystemSettingSwitchPreference
               android:key="qs_dual_tone"
               android:title="@string/qs_dual_tone_title"
               android:summary="@string/qs_dual_tone_summary"
               android:defaultValue="true" />
               
          <com.infinity.support.preferences.SystemSettingSwitchPreference
               android:key="omni_footer_text_show"
               android:title="@string/qs_footer_text_title"
               android:summary="@string/qs_footer_text_summary"
               android:defaultValue="false"/>

          <com.infinity.support.preferences.SystemSettingEditTextPreference
               android:key="x_footer_text_string"
               android:title="@string/qs_footer_text_string_title"
               android:summary="@string/qs_footer_text_string_summary"
               android:dependency="omni_footer_text_show"
               android:defaultValue="Infinity" />
               
          <com.infinity.support.preferences.SystemSettingSeekBarPreference
               android:key="qs_transparency"
               android:title="@string/qs_transparency_title"
               android:summary="@string/qs_transparency_summary"
               android:defaultValue="100"
               settings:interval="1"
               android:max="100"
               settings:units="%"         
               android:min="1" />
               
          <com.infinity.support.preferences.SystemSettingListPreference
               android:key="custom_transitions_page_tile"
               android:entries="@array/qs_transitions_entries"
               android:entryValues="@array/qs_transitions_values"
               android:summary="%s"
               android:title="@string/qs_transitions_title" />
     </PreferenceCategory>          
               
     <PreferenceCategory
          android:title="@string/media_category">          

        <com.infinity.support.preferences.SystemSettingSwitchPreference
            android:key="qs_compact_media_player_mode"
            android:title="@string/qs_compact_media_player_mode_title"
            android:summary="@string/qs_compact_media_player_mode_summary"
            android:defaultValue="false"  />
            
       <com.infinity.support.preferences.SecureSettingSwitchPreference
            android:key="media_controls_always_show_time"
            android:title="@string/media_controls_always_show_time_title"
            android:summary="@string/media_controls_always_show_time_summary"
            android:defaultValue="false" />
            
       <com.infinity.support.preferences.SecureSettingSeekBarPreference
            android:key="media_controls_actions"
            android:title="@string/media_controls_actions_title"
            android:summary="@string/media_controls_actions_summary"
            android:max="5"
            android:min="0"
            android:defaultValue="5" />
            
       <com.infinity.support.preferences.SecureSettingSwitchPreference
            android:key="media_controls_time_as_next"
            android:title="@string/media_controls_time_as_next_title"
            android:summary="@string/media_controls_time_as_next_summary"
            android:dependency="media_controls_always_show_time"
            android:defaultValue="false" />
            
       <com.infinity.support.preferences.SecureSettingSwitchPreference
            android:key="show_media_squiggle_animation"
            android:title="@string/media_controls_squiggle_title"
            android:summary="@string/media_controls_squiggle_summary"
            android:defaultValue="true" />
            
       <com.infinity.support.preferences.SecureSettingSwitchPreference
            android:key="media_controls_ripple"
            android:title="@string/media_controls_ripple_title"
            android:summary="@string/media_controls_ripple_summary"
            android:defaultValue="true" />
            
       <com.infinity.support.preferences.SecureSettingSwitchPreference
            android:key="media_controls_turbulence"
            android:title="@string/media_controls_turbulence_title"
            android:summary="@string/media_controls_turbulence_summary"
            android:defaultValue="false" />

     </PreferenceCategory>

     <PreferenceCategory
        android:key="quick_settings_header_category"
        android:title="@string/header_category">
        
        <com.infinity.support.preferences.SystemSettingListPreference
            android:key="qs_header_clock_style"
            android:title="@string/qs_header_clock_style_title"
            android:entries="@array/qs_header_clock_style_entries"
            android:entryValues="@array/qs_header_clock_style_values"
            android:summary="%s"
            android:defaultValue="0" />

        <Preference
            android:key="category_custom_header"
            android:fragment="com.infinity.suite.fragments.QsHeaderImageSettings"
            android:title="@string/custom_header_title"
            android:summary="@string/custom_header_summary" />
     </PreferenceCategory>
     
     <PreferenceCategory
          android:title="@string/qs_tile_title">

        <com.infinity.support.preferences.SystemSettingSwitchPreference
            android:key="qs_tiles_haptic_feedback"
            android:title="@string/qs_tiles_haptic_feedback_title"
            android:summary="@string/qs_tiles_haptic_feedback_summary"
            android:defaultValue="true" />
            
        <com.infinity.support.preferences.SystemSettingSwitchPreference
            android:key="qs_tile_label_hide"
            android:title="@string/qs_tile_label_hide_title"
            android:summary="@string/qs_tile_label_hide_summary"
            android:defaultValue="false" />

        <com.infinity.support.preferences.SystemSettingSeekBarPreference
            android:key="qs_tile_label_size"
            android:title="@string/qs_tile_label_size_title"
            android:max="15"
            settings:min="10"
            settings:interval="1"
            settings:units="sp"
            android:defaultValue="14" />

        <com.infinity.support.preferences.SystemSettingSwitchPreference
            android:key="qs_tile_vertical_layout"
            android:title="@string/qs_tile_layout_title"
            android:summary="@string/qs_tile_layout_summary"
            android:defaultValue="false" />

        <com.infinity.support.preferences.SystemSettingListPreference
            android:key="qs_tile_ui_style"
            android:title="@string/quick_settings_tile_ui_style_title"
            android:entries="@array/quick_settings_tile_ui_style_entries"
            android:entryValues="@array/quick_settings_tile_ui_style_values"
            android:defaultValue="0" />
            
        <com.infinity.support.preferences.SystemSettingListPreference
            android:key="qs_panel_style"
            android:title="@string/qs_styles_title"
            android:entries="@array/qs_styles_entries"
            android:entryValues="@array/qs_styles_values"
            android:summary="%s"
            android:defaultValue="0" />
            
        <Preference
            android:key="qs_layout_columns_rows"
            android:title="@string/qs_layout_columns_rows_title"
            android:summary="@string/qs_layout_columns_rows_summary"
            android:fragment="com.infinity.suite.fragments.LayoutSettings" />
            
        <Preference
            android:key="qs_tile_anim"
            android:title="@string/qs_tile_anim_title"
            android:summary="@string/qs_tile_anim_summary"
            android:fragment="com.infinity.suite.fragments.QSTileAnimSettings" />
     </PreferenceCategory>

     <PreferenceCategory
          android:title="@string/qs_show_brightness_slider_title">

          <!-- Brightness slider -->
          <com.infinity.support.preferences.SecureSettingListPreference
               android:key="qs_show_brightness_slider"
               android:title="@string/qs_show_brightness_slider_title"
               android:entries="@array/qs_show_brightness_slider_entries"
               android:entryValues="@array/qs_show_brightness_slider_values"
               android:defaultValue="1" />

          <com.infinity.support.preferences.SecureSettingListPreference
               android:key="qs_brightness_slider_position"
               android:dependency="qs_show_brightness_slider"
               android:title="@string/qs_brightness_slider_position_title"
               android:entries="@array/qs_brightness_slider_position_entries"
               android:entryValues="@array/qs_brightness_slider_position_values"
               android:defaultValue="0" />

          <com.infinity.support.preferences.SecureSettingSwitchPreference
               android:key="qs_show_auto_brightness"
               android:dependency="qs_show_brightness_slider"
               android:title="@string/qs_show_auto_brightness_title"
               android:summary="@string/qs_show_auto_brightness_summary"
               android:defaultValue="true" />
               
          <com.infinity.support.preferences.SecureSettingListPreference
		android:key="brightness_slider_style"
		android:title="@string/brightness_slider_style_title"
		android:entries="@array/brightness_slider_style_entries"
		android:entryValues="@array/brightness_slider_style_values"
		android:defaultValue="0" />
               
          <com.infinity.support.preferences.SystemSettingSwitchPreference
               android:title="Brightness Percentage"
               android:key="BRIGHTNESS_TEXTVIEW"
               android:summary="show hide brightness percentage text"
               android:defaultValue="false" />
               
          <com.infinity.support.preferences.SystemSettingSwitchPreference
               android:key="qs_brightness_slider_haptic"
               android:title="@string/qs_brightness_slider_haptic_title"
               android:summary="@string/qs_brightness_slider_haptic_summary"
               android:defaultValue="false" />
     </PreferenceCategory>
</PreferenceScreen>

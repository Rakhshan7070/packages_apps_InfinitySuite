 <PreferenceScreen
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
     android:title="@string/settings_icon_title">
     
     <!-- Random colors -->
     <com.infinity.support.preferences.SystemSettingSwitchPreference
         android:key="icon_random_colors"
         android:title="@string/icon_random_colors_title"
         android:summary="@string/icon_random_colors_summary"
         android:defaultValue="false" />
 
     <!-- Combined icon style -->
     <com.infinity.support.preferences.SystemSettingListPreference
         android:key="icon_style"
         android:title="@string/icon_style_title"
         android:summary="@string/icon_style_summary"
         android:entries="@array/icon_style_entries"
         android:entryValues="@array/icon_style_values"
         android:defaultValue="6" />
         
     <!-- Corner style -->
     <com.infinity.support.preferences.SystemSettingListPreference
         android:key="icon_corner_style"
         android:title="@string/icon_corner_style_title"
         android:summary="@string/icon_corner_style_summary"
         android:entries="@array/corner_style_entries"
         android:entryValues="@array/corner_style_values"
         android:defaultValue="0" />
 
 </PreferenceScreen>
